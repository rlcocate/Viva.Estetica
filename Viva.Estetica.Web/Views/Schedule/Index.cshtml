@model IEnumerable<Viva.Estetica.Dominio.Agenda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Agenda de Serviços</h2>

<p>
    @if (ViewBag.DentroHorarioMarcacao != null && ViewBag.DentroHorarioMarcacao)
    {
        @Html.ActionLink("Agendar serviço", "Create", new { id = 0 })
    }

    @if (!string.IsNullOrEmpty(ViewBag.Mensagem))
    {
        <script type="text/javascript">
            alert('@ViewBag.Mensagem');
        </script>
    }
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Cliente")
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Celular)
        </th>
        <th>
            @Html.DisplayName("Serviço")
        </th>
        @*<th>
                @Html.DisplayName("Sessão")
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Horario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duracao)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.Celular)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Servico.Nome)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.IdSessoes)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Data)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Horario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duracao)
            </td>
            <td>
                @Html.ActionLink("Reagendar", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Cancelar", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
